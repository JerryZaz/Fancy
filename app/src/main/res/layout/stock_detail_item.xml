<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="stockDetail"
            type="us.hnry.fancy.presentation.wrapper.StockDetailRowItem" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/detail_single_item_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{stockDetail.formattedKey}"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                tools:text="Large Text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_weight="3">

            <TextView
                android:id="@+id/detail_single_item_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{stockDetail.formattedValue}"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:text="Medium Text" />
        </LinearLayout>

    </LinearLayout>
</layout>