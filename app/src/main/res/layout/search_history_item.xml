<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="searchHistoryItem"
            type="us.hnry.fancy.presentation.wrapper.SearchHistoryRowItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> searchHistoryItem.handleClick()}"
        android:padding="@dimen/content_padding">

        <TextView
            style="@style/Text.Large.Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{searchHistoryItem.symbol}"
            tools:text="SQ" />

        <TextView
            style="@style/Text.Medium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="@{searchHistoryItem.name}"
            tools:text="Square, Inc." />

    </LinearLayout>
</layout>